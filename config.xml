<?xml version="1.0" encoding="UTF-8" ?>
    	<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "es.juntadeandalucia.mapea.planromero"
		versionCode = "100" 
		version     = "1.0.0" >

	<name>Plan Romero 2015</name>
	<description>
		Posición de las hermandades del Rocío en 2015
	</description>
	<author email="l-dirsigc.chap@juntadeandalucia.es" href="http://www.juntadeandalucia.es">
		Junta de Andalucía
	</author>
	<content src="index.html" />
	<access origin="*" />
	<icon src="resources/icon.png" /><!--Adaptar a resoluciones?-->
	<preference name="fullscreen" value="true" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="AutoHideSplashScreen" value="false" />
<!-- PERMISOS -->	
	<preference name="permissions" value="none"/>	
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

<!-- SPLASH Android -->
	<gap:splash src="resources/screen.jpg" /> <!--DEFAULT-->
	<gap:splash src="resources/screen.jpg" gap:platform="android" gap:qualifier="port-ldpi" />
	<gap:splash src="resources/screen.jpg" gap:platform="android" gap:qualifier="port-mdpi" />
	<gap:splash src="resources/screen.jpg" gap:platform="android" gap:qualifier="port-hdpi" />
	<gap:splash src="resources/screen.jpg" gap:platform="android" gap:qualifier="port-xhdpi" />
<!-- SPLASH iOS -->
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="320" height="480" />
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="640" height="960" />
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="640" height="1136" />
	<!-- iPhone 6 -->
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="750" height="1334" />
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="1242" height="2208" />
	<!-- iPad -->
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="768" height="1024" />
	<!-- Retina iPad -->
	<gap:splash src="resources/screen.jpg" gap:platform="ios" width="1536" height="2048" />

<!-- PLUGINS -->
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="org.apache.cordova.geolocation" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />
</widget>
